{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: mpicc build active file",
            "command": "/usr/local/mpich-install/bin/mpic++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "./src/*.cpp",
                "-std=c++17",
                "-Wall",
                "-Werror",
                "-lGLEW",
                "-lglfw3",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl",
                "-I",
                "./src/",
                "-o",
                "debug/nbody"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}